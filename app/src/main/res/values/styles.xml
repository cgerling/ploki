<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">

    </style>

    <style name="AppTheme.NoActionBar" parent="BaseAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SearchField" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:queryHint">Search for articles...</item>
        <item name="android:inputType">text</item>
    </style>

</resources>
